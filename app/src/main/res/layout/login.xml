<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_below="@+id/imageView8"
        android:layout_alignLeft="@id/imageView8"
        android:layout_alignRight="@id/imageView8"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="89dp"
        android:layout_marginBottom="478dp"
        android:gravity="center"
        android:text="User Login"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_alignStart="@id/imageView8"
        android:layout_alignEnd="@id/imageView8" />

    <Spinner
        android:id="@+id/spinnerloginas"
        android:layout_width="169dp"
        android:layout_height="37dp"
        android:layout_alignLeft="@id/imageView8"
        android:layout_alignRight="@id/imageView8"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="190dp"
        android:layout_marginEnd="83dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="322dp"
        android:layout_alignStart="@id/imageView8"
        android:layout_alignEnd="@id/imageView8"
        android:layout_marginStart="190dp" />

    <EditText
        android:id="@+id/editTextpassword"
        android:layout_width="381dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/imageView8"
        android:layout_alignRight="@id/imageView8"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="194dp"
        android:background="#595858"
        android:ems="10"
        android:hint="Enter the password"
        android:inputType="textPassword"
        android:textColor="#EFF2F4"
        android:layout_alignStart="@id/imageView8"
        android:layout_alignEnd="@id/imageView8" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/imageView8"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="235dp"
        android:text="Password"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignStart="@id/imageView8"
        android:layout_marginStart="1dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/imageView8"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="300dp"
        android:text="Username"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignStart="@id/imageView8"
        android:layout_marginStart="0dp" />

    <EditText
        android:id="@+id/editTextusername"
        android:layout_width="381dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/imageView8"
        android:layout_alignRight="@id/imageView8"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="260dp"
        android:background="#595858"
        android:ems="10"
        android:hint="Enter the Username"
        android:textColor="#FFFFFF"
        android:layout_alignStart="@id/imageView8"
        android:layout_alignEnd="@id/imageView8">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttonlogin"
        android:layout_width="219dp"
        android:layout_height="51dp"
        android:layout_alignLeft="@id/imageView8"
        android:layout_alignRight="@id/imageView8"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="95dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="95dp"
        android:layout_marginBottom="115dp"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="#03DAC6"
        android:clickable="true"
        android:cursorVisible="true"
        android:text="Login"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_alignStart="@id/imageView8"
        android:layout_alignEnd="@id/imageView8" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="167dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:src="@drawable/login" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/picsart_12_08_06_38_16" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignLeft="@id/imageView8"
        android:layout_alignRight="@id/imageView8"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="465dp"
        android:gravity="center"
        android:text="Please login to continue"
        android:textSize="19sp" />

</RelativeLayout>
