<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        >

        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="95dp"
            >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:paddingLeft="2dp"
                android:textColor="#FFFFFF"
                android:text="Select Branch" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:paddingLeft="2dp"
                android:text="Select Year"
                android:textColor="#FFFFFF" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/LinearLayout20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout10"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin">

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/activity_horizontal_margin" />

            <Spinner
                android:id="@+id/spinneryear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/LinearLayout21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/LinearLayout20"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            >



            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Subject"
                android:textColor="#FFFFFF"
                android:paddingLeft="2dp"
                android:backgroundTint="#FFFFFF"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/LinearLayout21"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            >


            <Spinner
                android:id="@+id/spinnerSE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/Selectdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LinearLayout30"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="Select Date"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textColor="#FFFFFF"
            android:paddingLeft="2dp"
            android:layout_alignLeft="@id/LinearLayout30">

        </TextView>

        <LinearLayout
            android:id="@+id/LinearLayout40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Selectdate"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="2dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            >

            <ImageButton
                android:id="@+id/DateImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/roundedbutton"
                android:backgroundTint="#000000"
                android:src="@drawable/calendar_icon" />

            <EditText
                android:id="@+id/DateEditText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@drawable/roundedtextview"
                android:ems="8">

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout50"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@id/LinearLayout40"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"


            >
            <Button
                android:id="@+id/buttonsubmit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundedbutton"
                android:layout_weight="1"
                android:text="Add Attendance"
                android:backgroundTint="#03DAC6"
                android:textColor="#000000"
                android:textAllCaps="true"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout60"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/LinearLayout50"
            android:layout_marginTop="75dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            >

            <Button
                android:id="@+id/viewAttendancebutton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundedbutton"
                android:text="View Attendance"
                android:backgroundTint="#616"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/viewTotalAttendanceButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundedbutton"
                android:text="View Total Attendance"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:backgroundTint="#616"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>